/**
*
* #.# Reusable items
*
*/
.Pufi__Button
	color white
	display block
	border 2px solid white
	padding (18px / fontSizeDesktop)rem (34px / fontSizeDesktop)rem (18px / fontSizeDesktop)rem  (34px / fontSizeDesktop)rem
	position absolute
	top 42%
	left 50%
	transform translateY(-42%)
	transform translateX(-50%)
	text-align center
	text-decoration none

.Pufi__invalidMsg
	visibility hidden
	font-size (21px / fontSizeDesktop)rem
	margin-top 20px
	color red

.Pufi__Background__Sticky
	background-color colourGreyLight !important